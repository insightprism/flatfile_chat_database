{
  "storage_base_path": "./data",
  "user_data_directory_name": "users",
  "panel_sessions_directory_name": "panel_sessions",
  "global_personas_directory_name": "personas_global",
  "system_config_directory_name": "system",
  
  "session_id_prefix": "chat_session",
  "panel_id_prefix": "panel",
  "session_timestamp_format": "%Y%m%d_%H%M%S",
  "context_snapshot_timestamp_format": "%Y%m%d_%H%M%S",
  
  "user_profile_filename": "profile.json",
  "session_metadata_filename": "session.json",
  "messages_filename": "messages.jsonl",
  "situational_context_filename": "situational_context.json",
  "document_metadata_filename": "metadata.json",
  
  "max_message_size_bytes": 1048576,
  "max_document_size_bytes": 104857600,
  "max_messages_per_session": 100000,
  "max_sessions_per_user": 1000,
  "max_context_history_snapshots": 100,
  
  "message_pagination_default_limit": 100,
  "session_list_default_limit": 50,
  "search_results_default_limit": 20,
  "jsonl_read_buffer_size": 8192,
  
  "atomic_write_temp_suffix": ".tmp",
  "backup_before_delete": true,
  "auto_cleanup_empty_directories": true,
  "validate_json_on_read": true,
  
  "search_include_message_content": true,
  "search_include_context": true,
  "search_include_metadata": false,
  "full_text_search_min_word_length": 3,
  
  "panel_max_personas": 10,
  "panel_insight_retention_days": 90,
  "panel_message_threading_enabled": true,
  
  "persona_limit": 10,
  
  "allowed_document_extensions": [
    ".pdf", ".txt", ".md", ".json", ".csv", 
    ".png", ".jpg", ".jpeg", ".gif", ".webp"
  ],
  "document_storage_subdirectory_name": "documents",
  "document_analysis_subdirectory_name": "analysis",
  
  "context_history_subdirectory_name": "context_history",
  "context_summary_max_length": 500,
  "context_key_points_max_count": 10,
  "context_confidence_threshold": 0.7
}